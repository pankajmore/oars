<% weekly_calendar(@events, :date => @date, :include_24_hours => true) do |w| %> 
  <% w.week(:business_hours => params[:business_hours]) do |event,truncate| %> 
      <%= event.starts_at.strftime('%I:%M%p') %> </br>
      <%= link_to event.offered_course.course.number, offered_course_path(event.offered_course.id), :remote => true %>
  <% end -%> 
<% end -%>
