<div class="center hero-unit">
        <h3>Modify course Constraints</h3>
        
        <p>
         <table class="center table">
                <tr class="info"><td>Course</td><td>Title</td><td>Constraints</td></tr>
			
                <% @courses.each do |course| %>
                <tr>
                  <td><%=course.number%></td>
                  <td><%=course.name%></td>
                  <td><%= link_to "Get Constraints", {:action => "get_constraints",
        :controller => "courses", :id => 
        course.id} , {:class => "btn btn-small btn-primary"}%></td>
                </tr>
                <%end%>
                
        </table>

</div>
