<div class="center hero-unit">
        <p>
        Here add or modify course Template <%=@template.id%>
         <table class="center table">
                <tr class="info"><td>Constraint</td><td>bucket</td><td>Course</td><td>modify constraint</td><td>delete constraint</td></tr>
			
                <% @template.course_constraints.each do |constraint| %>
                <tr>
                  <td><%=constraint.id%></td>
                  <td><%=constraint.bucket %></td>
                  <td><%=constraint.course.number+ ' ' + constraint.course.name%></td>
                  <td><%= link_to "Modify Constraint", {:action => "modify_constraint",
        :controller => "courses", :id => constraint.id} , {:class => "btn btn-small btn-primary"}%></td>
                  <td><%=link_to "Delete Constraint", {:action => "delete_constraint",
        :controller => "courses", :id => constraint.id} , {:class => "btn btn-small btn-danger"}%></td>
                </tr>
                <%end%>
                
        </table>
    <br><br>
    Add new Constraint <br>    
        
 <%= form_tag("/courses/add_constraint/", :method => "get" ) do %>
  <%= label_tag(:bucket, "bucket:") %>
  <%= text_field_tag(:bucket) %>
  <%= label_tag(:course_num, "Course Number:") %>
  <%= text_field_tag(:course_num) %>
   <br>
   <%= hidden_field_tag(:template_id,@template.id) %>
   <%= submit_tag("Add Constraint") %>
<% end %>

</div>
