<div class="center hero-unit">
        <p>
        <h5>Here add or modify course Template <%=@template.name%></h5>
         <table class="center table">
                <tr class="info"><td>Constraint Name</td><td>modify Constraint</td><td>Delete Constraint</td></tr>
			
                <% @template.course_constraints.each do |constraint| %>
                <tr>
                  <td><%=constraint.name %></td>
                  <td><%= link_to "Modify Constraint", {:action => "modify_constraint",
        :controller => "courses", :constraint_id => constraint.id, :template_id => @template.id} , {:class => "btn btn-small btn-primary"}%></td>
                  <td><%=link_to "Delete Constraint", {:action => "delete_constraint",
        :controller => "courses", :constraint_id => constraint.id, :template_id => @template.id} , {:class => "btn btn-small btn-danger"}%></td>
                </tr>
                <%end%>
                
        </table>
    <br><br>
    <h3>Add new Constraint</h3> <br>    
        
 <%= form_tag("/courses/add_constraint/", :method => "get" ) do %>
  
  <%= label_tag(:name, "Constraint Name:") %>
  <%= text_field_tag(:name) %>
   <br>
   <%= hidden_field_tag(:template_id,@template.id) %>
   <%= submit_tag("Add Constraint") %>
<% end %>
<%=link_to "Done Adding Constraints", {:action => "view_templates",
        :controller => "courses"}, {:class => "btn btn-small btn-primary"}%></td>

</div>
