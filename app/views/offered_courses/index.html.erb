<%= form_tag("/offered_courses/search/", :method => "get") do %>
  <%= label_tag(:q, "Search Course:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Offered Courses</h1>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Course Name</th>
      <th>Request Status</th>
    </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
  <tr>
      <th><%= link_to course.course.number, course , :remote => true %></th>
      <th><%= link_to course.course.name, course , :remote => true %></th>
      <th>
        <%= if (course.course_requests & current_student.course_requests).any?
            button_to "Delete Request", {:action => "delete", :id =>
        course.id, :remote => true} , {:class => "btn btn-danger"} 
        else 
            button_to "Send Request", {:action => "add", :id =>
            course.id, :remote => true} , {:class => "btn "} 
        end %>
      </th>
    <tr>
  <% end %>
  </tbody>
</table>

<!-- Modal -->
