<%= form_tag("/offered_courses/search", :method => "get") do %>
  <%= label_tag(:q, "Search Course:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Offered Courses</h1>
<div class="courses">
  <ul class="courses">
    <% @courses.each do |course| %>
    <li>
      <div class="course"> 
        <%= link_to course.course.number, course %>
        <%= link_to course.course.name, course %>
        <%= if course.accept_requests.include?(current_student.id) 
            button_to "Delete Request", :action => "delete", :id => course.id 
        else 
            button_to "Send Request", :action => "add", :id => course.id 
        end %> 
      </div>
    </li>
    <% end %>
  </ul>
</div>

