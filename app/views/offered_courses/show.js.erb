var body = "Instructors : <%= @course.faculties.map{|p| p.name}.join(', ') %> </br> Timings : <% @timings.each do |timer| %> day : <%= timer.day %>; time : <%= timer.start_time.strftime('%H:%M:%S') %> - <%= timer.end_time.strftime('%H:%M:%S') %></br> <% end %> Description: <%= @course.description %>"
$(".modal-header h3").html("<%= @course.course.number + " : " + @course.course.name %>")
$(".modal-body").html(body)

$("#courseModal").modal()
